generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContentType {
  ARTICLE
  VIDEO
}

model Content {
  id          String      @id @default(cuid())
  title       String
  description String?
  originalUrl String
  content     String?     // 文章内容或视频描述
  localVideoPath String?  // 本地视频路径
  type        ContentType
  videoId     String?
  video       VideoAsset? @relation(fields: [videoId], references: [id], onDelete: SetNull)
  
  // 统计数据
  likes       Int         @default(0)
  views       Int         @default(0)
  favorites   Int         @default(0)
  
  // 时间戳
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // 关联
  comments    Comment[]
  tags        Tag[]       @relation("ContentTags")
  
  @@map("contents")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  author    String?
  contentId String
  content_relation Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("comments")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  color    String?   @default("#3b82f6")
  contents Content[] @relation("ContentTags")
  
  createdAt DateTime @default(now())
  
  @@map("tags")
}

model UserAction {
  id        String   @id @default(cuid())
  contentId String
  action    String   // 'like', 'view', 'favorite'
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  @@map("user_actions")
}

model VideoAsset {
  id        String   @id @default(cuid())
  url       String
  path      String?
  filename  String?
  size      Int?
  mimeType  String?
  createdAt DateTime @default(now())

  contents  Content[]
  
  @@map("video_assets")
}
